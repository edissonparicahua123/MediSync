# ==============================================
# MEDISYNC ENTERPRISE - ENVIRONMENT VARIABLES
# ==============================================

# ============ DATABASE ============
POSTGRES_USER=medisync
POSTGRES_PASSWORD=medisync_secure_password_change_me
POSTGRES_DB=medisync
POSTGRES_PORT=5432
DATABASE_URL=postgresql://medisync:medisync_secure_password_change_me@localhost:5432/medisync

# ============ REDIS ============
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# ============ SERVER (NestJS) ============
NODE_ENV=development
SERVER_PORT=3000
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-minimum-32-characters
JWT_REFRESH_EXPIRATION=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AI Service
AI_SERVICE_URL=http://localhost:8000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@medisync.com

# ============ AI SERVICE (FastAPI) ============
AI_PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info
PYTHONUNBUFFERED=1

# AI Model Configuration
MODEL_PATH=./models
TRIAGE_MODEL_VERSION=v1.0
SUMMARY_MODEL_VERSION=v1.0

# ============ CLIENT (React + Vite) ============
CLIENT_PORT=5173
VITE_API_URL=http://localhost:3000
VITE_AI_URL=http://localhost:8000
VITE_APP_NAME=MediSync Enterprise
VITE_APP_VERSION=1.0.0

# ============ SECURITY ============
# Encryption keys (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-encryption-key-here-32-characters-minimum
HASH_SALT_ROUNDS=10

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# ============ MONITORING & LOGGING ============
LOG_LEVEL=info
ENABLE_LOGGING=true
ENABLE_AUDIT_LOGS=true

# ============ FEATURE FLAGS ============
ENABLE_AI_FEATURES=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ============ RATE LIMITING ============
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============ PAGINATION ============
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
